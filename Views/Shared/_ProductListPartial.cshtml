@model ProductManagement.Models.Product

<div class="row">

	<div class="span2">
		<img src="~/themes/images/products/@Model.ImagePath" alt="" />
	</div>
	<div class="span4">
		<h3>New | Available</h3>
		<hr class="soft" />
		<h5>@Model.Name </h5>
		<p>
			@Model.Description
		</p>
		<a class="btn btn-small pull-right" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@Model.Id">View Details</a>
		<br class="clr" />
	</div>
	<div class="span3 alignR">
		<form class="form-horizontal qtyFrm">
			<h3> @Model.Price?.ToString("C2")</h3>
			<label class="checkbox">
				<input type="checkbox">  Adds product to compair
			</label><br />

			<a class="btn btn-large btn-primary" onclick="addToCart(@Model.Id)">
				Add to <i class=" icon-shopping-cart"></i>
			</a>
			<a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@Model.Id" class="btn btn-large"><i class="icon-zoom-in"></i></a>

		</form>
	</div>

</div>

<hr class="soft" />